<?xml version="1.0"?>
<ruleset name="ClaimIt">
    <description>ClaimIt PHP Code Standards</description>

    <!-- Use PSR-12 as base standard -->
    <rule ref="PSR12"/>

    <!-- Check these directories -->
    <file>public</file>
    <file>src</file>
    <file>includes</file>
    <file>templates</file>

    <!-- Exclude vendor and other generated files -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/db/migrations/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>

    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Use colors in output -->
    <arg name="colors"/>
    
    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
</ruleset>

